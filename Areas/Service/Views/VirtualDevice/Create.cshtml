@model BS.Microservice.Web.Model.VirtualDevice
@{
    Layout = "~/Views/Shared/_Operate.cshtml";
}
<style>
    label.control-label {
        padding-right: 0;
    }

    span {
        margin-top: 9px;
        float: left;
        margin-left: -5px;
    }

    div.col-sm-4 {
        width: 30.33%;
    }

    #btnHost {
        float: left;
        margin-left: -48px;
        margin-top: 4px;
        height: 25px;
        padding-top: 2.5px;
        padding-left: 8px;
        width: 27px;
        position: relative;
    }

        #btnHost + label {
            width: 224.33px;
        }

    #Remark {
        width: 1012px;
    }
</style>
<div class="form-group form-groupm">
    <label class="col-sm-2 control-label">
        机器名称
    </label>
    <div class="col-sm-4">
        @Html.TextBoxFor(m => m.MachineName, new { placeholder = "机器名称", @class = "form-control", required = "" })
    </div><span style="color: #FF9966">*</span>
    <label class="col-sm-2 control-label">
        型号
    </label>
    <div class="col-sm-4">
        @Html.TextBoxFor(m => m.ModelNum, new { placeholder = "型号", @class = "form-control", required = "" })
    </div><span style="color: #FF9966"> *</span>
</div>
