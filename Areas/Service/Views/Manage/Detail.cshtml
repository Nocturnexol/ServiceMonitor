@model BS.Common.Model.Mongo.ServiceModels.ServiceEntity
@{
    Layout = "~/Views/Shared/_Detail.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins" style="border-left: 1px solid #E0E0E0; border-right: 1px solid #E0E0E0;
            border-bottom: 1px solid #E0E0E0;">
            <div class="ibox-title">
                <h5>
                    服务详细</h5>
                <div class="ibox-tools">
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a><a class="close-link"><i
                        class="fa fa-times"></i></a>
                </div>
            </div>
            <div class=" ibox-content" style="display: block; padding: 0px 15px 15px 15px;">
                <table class="table table-striped table-bottom" style="margin-top: 10px; margin-bottom: 0px;">
                    <tr>
                        <td class="lbName_1">
                            一级服务名称：
                        </td>
                        <td>
                            @Model.ServiceName
                        </td>
                        <td class="lbName_1">
                            二级服务名称：
                        </td>
                        <td>
                            @Model.SecondaryName
                        </td>
                        <td class="lbName_1">
                            一级服务ID：
                        </td>
                        <td class="lbName_right">
                            @Model.PrimaryId
                        </td>
                    </tr>
                    <tr>
                        <td class="lbName_1">
                            二级服务ID：
                        </td>
                        <td>
                            @Model.SecondaryId
                        </td>
                        <td class="lbName_1">
                            所在主机地址：
                        </td>
                        <td>
                            @Model.Host
                        </td>
                        <td class="lbName_1">
                            内网地址：
                        </td>
                        <td class="lbName_right">
                            @string.Join(",",ViewBag.InList??new List<string>())
                        </td>
                    </tr>
                    <tr>
                        <td class="lbName_1">
                            外网地址：
                        </td>
                        <td>
                            @string.Join(",", ViewBag.OutList ?? new List<string>())
                        </td>
                        <td class="lbName_1">
                            版本：
                        </td>
                        <td>
                            @Model.Version
                        </td>
                        <td class="lbName_1">
                            是否审核：
                        </td>
                        <td class="lbName_right">
                            @(Model.IsApproved?"是":"否")
                        </td>
                    </tr>
                    <tr>
                        <td class="lbName_1">
                            是否启用报警：
                        </td>
                        <td>
                            @(Model.IsAlert ? "已启用" : "未启用")
                        </td>
                        <td class="lbName_1">
                            最近启动时间：
                        </td>
                        <td>
                            @Model.StartupDate
                        </td>
                        <td class="lbName_1">
                            备注：
                        </td>
                        <td colspan="3" class="lbName_right">
                            @Model.Remark
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        @{
            ViewDataDictionary vDic = new ViewDataDictionary();
            vDic.Add("serverId", ViewData["serverId"]);
            vDic.Add("PrimaryId", ViewData["PrimaryId"]);
            Html.RenderPartial("_AlertList", 1, vDic);
        }
    </div>
</div>
