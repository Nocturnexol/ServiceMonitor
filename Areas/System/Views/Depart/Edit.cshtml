@model BS.Microservice.Web.Model.tblDepart
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Operate.cshtml";
}
<div class="form-group  form-groupm">
    @Html.HiddenFor(modelItem => modelItem.Rid)
