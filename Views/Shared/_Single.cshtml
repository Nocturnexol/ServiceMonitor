    <script type="text/javascript">
        $(function () {
            var height = $(window).height() - 50;
            $('.form-center').css('height', height);
            $(window).resize(function () {
                var height = $(window).height() - 50;
                $('.form-center').css('height', height);

            });
            var config = {
                ".chosen-select": { width: "100%" },
                ".chosen-select-deselect": {
                    allow_single_deselect: !0
                },
                ".chosen-select-no-single": {
                    disable_search_threshold: 10
                },
                ".chosen-select-no-results": {
                    no_results_text: "Oops, nothing found!"
                },
                ".chosen-select-width": {
                    width: "95%"
                }
            };
            for (var selector in config) $(selector).chosen(config[selector]);
        });

        function tablayout(obj, mark) {
            if ($(obj).attr('_href')) {
                var bStop = false;
                var bStopIndex = 0;
                var _href = $(obj).attr('_href');
                var _titleName = mark + ($(obj).attr("data-title") == undefined ? $(obj).attr("title") : $(obj).attr("data-title"));
                var topWindow = $(window.parent.document);
                var show_navLi = topWindow.find(".J_menuTab");
                if (show_navLi.length > 0) {
                    show_navLi.each(function () {
                        if ($(this).attr("data-id") == _href) {
                            bStop = true;
                            bStopIndex = show_navLi.index($(this));
                            return false;
                        }
                    });
                    if (!bStop) {
                        creatIframe(_href, _titleName);
                    } else {
                        show_navLi.removeClass("active").eq(bStopIndex).addClass("active");
                        var iframe_box = topWindow.find('#content-main');
                        iframe_box.children().hide().eq(bStopIndex).show();
                    }
                } else {
                    window.open(_href, _titleName);
                }
            }
        }

    </script>
</head>
<body>
    @RenderBody()
    @Scripts.Render("~/Resource/js/content.min.js")
</body>
</html>
