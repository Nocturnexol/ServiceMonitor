@model BS.Microservice.Web.Model.GroupName
@{
    Layout = "~/Views/Shared/_Operate.cshtml";
}
@Html.HiddenFor(t=>t.Rid)
@Html.HiddenFor(t=>t.CreateDateTime)
<div class="form-group form-groupm">
    <label class="col-sm-2 control-label">
        服务名称<span style="color: #FF9966"> *</span>
    </label>
    <div class="col-sm-4">
        @Html.TextBoxFor(modelItem => modelItem.ServiceName, new { @placeholder = "服务名称", @class = "form-control", @required = "" })
    </div>
    <label class="col-sm-2 control-label">
        服务中文名<span style="color: #FF9966"> *</span>
    </label>
    <div class="col-sm-4">
        @Html.TextBoxFor(modelItem => modelItem.ServiceNameCN, new { placeholder = "服务中文名", @class = "form-control", required = "" })
    </div>
</div>
<div class="form-group form-groupm">
    <label class="col-sm-2 control-label">
        备注&nbsp;
    </label>
    <div class="col-sm-10">
        @Html.TextAreaFor(modelItem => modelItem.Remarks, new { placeholder = "备注", @class = "form-control", rows = 3 })
    </div>
</div>